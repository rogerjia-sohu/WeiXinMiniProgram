.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 0%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.slogan-icon {
  width: 40px;
  height: 40px;
  background-size: 40px, 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 60px;
}

.spacer-slogan-img-to-txt {
  height: 30px;
  width: 100%;
  background-color: #fff;
}
